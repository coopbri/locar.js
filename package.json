{
  "name": "locar",
  "version": "0.1.6",
  "description": "Location-based AR from AR.js.",
  "files": [
    "dist",
    "lib/types"
  ],
  "main": "./dist/locar.umd.js",
  "module": "./dist/locar.es.js",
  "types": "lib/types/locar.d.ts",
  "exports": {
    ".": {
      "types": "./lib/types/locar.d.ts",
      "import": "./dist/locar.es.js",
      "require": "./dist/locar.umd.js"
    }
  },
  "scripts": {
    "lint": "eslint ./lib --ext .js,.json,.css",
    "lint:fix": "prettier --write ./lib && eslint ./lib --ext .js,.json,.css --fix",
    "typecheck": "tsc --noEmit",
    "build": "npm run lint && npm run typecheck && vite build && npm pack",
    "makedocs": "jsdoc -r lib -d docs/api"
  },
  "devDependencies": {
    "@eslint/css": "^0.11.0",
    "@eslint/js": "^9.35.0",
    "@eslint/json": "^0.13.2",
    "@types/three": "^0.181.0",
    "eslint": "^9.38.0",
    "globals": "^16.4.0",
    "jsdoc": "^4.0.4",
    "prettier-eslint": "^16.4.2",
    "typescript": "^5.7.2",
    "vite": "^7.1.3"
  },
  "dependencies": {
    "three": "^0.175.0"
  }
}
